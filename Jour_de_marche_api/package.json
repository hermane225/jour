{
  "name": "jour_de_marche_api",
  "version": "1.0.0",
  "description": "API plateforme e-commerce Jour de Marché - Agriculteurs, commerçants et consommateurs",
  "main": "src/server.js",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "migrate": "node scripts/migrate.sh",
    "seed": "node scripts/seed.sh",
    "test": "jest --runInBand --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:unit": "jest src/tests/unit --runInBand",
    "test:integration": "jest src/tests/integration --runInBand",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "build": "echo 'Build configured for Docker'",
    "docker:build": "docker build -t jour-de-marche-api:latest .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f api"
  },
  "keywords": [
    "api",
    "nodejs",
    "express",
    "mongodb",
    "ecommerce",
    "marketplace"
  ],
  "author": "Jour de Marché",
  "license": "PROPRIETARY",
  "dependencies": {
    "axios": "^1.6.5",
    "bcryptjs": "^2.4.3",
    "bull": "^4.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.0.0",
    "google-auth-library": "^10.5.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "9.0.2",
    "mongodb": "^7.0.0",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.7",
    "redis": "^4.6.10",
    "socket.io": "^4.7.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  }
}
