{
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error", "log"] }],
    "func-names": "off",
    "no-underscore-dangle": "off",
    "consistent-return": "warn",
    "object-shorthand": "warn",
    "linebreak-style": "off",
    "global-require": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_|require|app|config|logger|connectDB|connectRedis" }]
  }
}
